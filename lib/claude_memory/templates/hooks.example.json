{
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "claude-memory hook ingest",
            "timeout": 10
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "claude-memory hook ingest",
            "timeout": 10
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "claude-memory hook ingest",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "claude-memory hook sweep",
            "timeout": 30
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "claude-memory hook ingest",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "claude-memory hook sweep",
            "timeout": 30
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "claude-memory hook sweep",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
